<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/signup-and-customizeProfile.css">
    <title>Uni-connect App</title>
</head>
<body>
    <header>
        <nav>
            <div class="logo-container">
                <h2 class="logo-container__text">uni-connect</h2>
            </div>
        </nav>
    </header>

    <main class="customizeprofile-main main-utility-class">
        <div class="customizeprofile-text-container text-container-utility-class">
            <h2>Customize Your Profile, <span><%= user.firstName %></span></h2>
        </div>

        <section class="customizeprofile-container form-container-utility-class">
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-info"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <form action="/customizeProfile?_method=PUT" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                    <label for="department" class="form-label">Department</label>
                    <input type="text" class="customizeprofile-input input-utility-class" id="department" name="department">
                </div>
                <div class="mb-3">
                    <label for="caption" class="form-label">Caption</label>
                    <textarea class="customizeprofile-textarea input-utility-class" id="caption" name="caption"></textarea>
                </div>
                <div class="mb-3">
                    <label for="hobbies" class="form-label">Hobbies</label>
                    <textarea class="customizeprofile-textarea input-utility-class"  aria-describedby="formHelp" id="hobbies" name="hobbies"></textarea>
                    <div id="formHelp" class="form-text">Use a comma(,) to separate your hobbies if you have more than one.</div>
                </div>
                <div class="mb-3">
                    <label for="skiils" class="form-label">Skills</label>
                    <textarea class="customizeprofile-textarea input-utility-class" aria-describedby="formHelp" id="skills" name="skills"></textarea>
                    <div id="formHelp" class="form-text">Use a comma(,) to separate your skills if you have more than one.</div>
                </div>
                <div class="mb-3">
                    <label for="imageUpload" class="form-label">Profile Picture</label>
                    <input type="file" class="customizeprofile-input input-utility-class" id="imageUpload" name="file">
                </div>
                <button type="submit" class="customizeprofile-button button-utility-class" value="Upload">Submit</button>
                </form>
        </section>
    </main>
</body>
</html>